{
  "name": "client.ts",
  "version": "1.0.0",
  "description": "",
  "main": "client.ts",
  "scripts": {
    "test": "clear;nodemon;",
    "start": "pm2 start build/client.js; pm2 logs",
    "restart": "pm2 restart client; pm2 logs",
    "build": "mv build old_build;tsc client --outDir build; date > build/date.txt",
    "setup": "npm i -g typescript; npm i -g ts-node; npm i -g pm2;",
    "postinstall": "npm build;"
  },
  "author": "Andrew Brantley",
  "license": "ISC",
  "nodemonConfig": {
    "ext": "ts",
    "ignore": [
      "test/*",
      "build/*",
      "docs/*"
    ],
    "delay": "100",
    "exec": "ts-node client"
  },
  "dependencies": {
    "@types/node": "^10.5.1",
    "config": "^1.30.0",
    "ws": "^5.2.1"
  }
}
